{% extends "base.html.twig" %}

{% block title "Gallery" %}

{% block header %}
    {% set currentPage = 'gallery' %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <main id="main">
        <section id="about">
            <div class="container">
            </div>
        </section>
        <section id="gallery">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <ul id="gallery-filters">
                            {% for category in categoryList %}
                                <li data-filter=".filter-{{ category.id }}" class="{% if loop.first %}filter-active{% endif %}">
                                    {{ category.name }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="row gallery-container">
                    {% for image in imageList %}
                        <div class="col-lg-4 col-md-6 gallery-item filter-{{ image.galleryCategoryId }} wow fadeInUp">
                        <div class="gallery-wrap">
                            <figure>
                                <a href="/img/{{ image.path }}" data-lightbox="{{ image.galleryCategoryId }}" data-title="{{ image.name }} - {{ image.year }}">
                                    <img src="/img/{{ image.path }}" class="img-fluid" alt="">
                                </a>
                            </figure>
                            <div class="gallery-info">
                                <p>{{ image.name }}</p>
                                <p>
                                    {% if image.material %}{{ image.material }}{% endif %}
                                    {% if image.size %} | {{ image.size }}{% endif %}
                                    {% if image.year %} | {{ image.year }} г.{% endif %}
                                </p>
                                {% if image.comment %}
                                    <p>{{ image.comment }} г.</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>
{% endblock %}
